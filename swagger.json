            }
          }
        }
      }
    },
    "/plans/{planId}/start/": {
      "post": {
        "tags": [
          "plan"
        ],
        "summary": "starts an allowed plan",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "authorization",
            "type": "string",
            "description": "jwt bearer token",
            "required": true
          },
          {
            "in": "path",
            "name": "planId",
            "type": "string",
            "description": "The plan name",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": "Plan already started",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "401": {
            "description": "Not authorized for Plan",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "404": {
            "description": "Plan authorized but not found",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Server Error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
    "/plans/{planId}/stop/": {
      "post": {
        "tags": [
          "plan"
        ],
        "summary": "stops and deletes a running plan",
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "header",
            "name": "authorization",
            "type": "string",
            "description": "jwt bearer token",
            "required": true
          },
          {
            "in": "path",
            "name": "planId",
            "type": "string",
            "description": "The plan name",
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Ok",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "401": {
            "description": "Not authorized for Plan",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "404": {
            "description": "No running plan with that name found",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          },
          "500": {
            "description": "Server Error",
            "schema": {
              "$ref": "#/definitions/ErrorResponse"
            }
          }
        }
      }
    },
