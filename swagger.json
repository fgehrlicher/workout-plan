  "definitions": {
    "Plan": {
      "properties": {
        "id": {
          "type": "string",
          "example": "strengthplan1"
        },
        "name": {
          "type": "string",
          "example": "Kraft Plan"
        },
        "description": {
          "type": "string",
          "example": "Lorem Plan ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor invidunt ut labore et dolore"
        },
        "version": {
          "type": "string",
          "example": "1.0.0"
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "version"
      ]
    },
    "Stats": {
      "properties": {
        "plan_name": {
          "type": "string",
          "example": "Kraft Plan"
        },
        "total_unit_count": {
          "type": "int",
          "example": 3
        },
        "units_done": {
          "type": "int",
          "example": 1
        },
        "total_exercise_count": {
          "type": "int",
          "example": 13
        },
        "exercises_used": {
          "type": "int",
          "example": 4
        },
        "plan_started": {
          "type": "string",
          "example": "Do, 01 Aug 2019 12:55:23 UTC"
        },
        "last_workout": {
          "type": "string",
          "example": "Fri, 02 Aug 2019 15:00:00 UTC"
        }
      },
      "required": [
        "plan_name",
        "total_unit_count",
        "units_done",
        "total_exercise_count",
        "exercises_used",
        "plan_started",
        "last_workout"
      ]
    },
    "Unit": {
      "properties": {
        "name": {
          "type": "string",
          "example": "Basiswerte"
        },
        "description": {
          "type": "string",
          "example": "Lorem Basiswerte ipsum dolor sit amet, consetetur sadipscing elitr...."
        },
        "exercises": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string",
                "example": "main-exercise"
              },
              "definition": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string",
                    "example": "strict-press"
                  },
                  "name": {
                    "type": "string",
                    "example": "Strict Press"
                  },
                  "definition": {
                    "type": "object",
                    "properties": {
                      "description": {
                        "type": "string",
                        "example": "Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod tempor..."
                      },
                      "video": {
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string",
                            "example": "1234567"
                          }
                        }
                      }
                    }
                  }
                }
              },
              "sequence": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "type": {
                      "type": "string",
                      "example": "sets-reps"
                    },
                    "variable": {
                      "type": "string",
                      "example": "strict_press_base"
                    },
                    "max-out": {
                      "type": "string",
                      "example": "1"
                    },
                    "weight": {
                      "type": "string",
                      "example": "5.50"
                    },
                    "sets": {
                      "type": "string",
                      "example": "4"
                    },
                    "reps": {
                      "type": "string",
                      "example": "5"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "Message": {
      "properties": {
        "message": {
          "type": "string"
        },
        "required": [
          "message"
        ]
      }
    },
    "StateMessage": {
      "properties": {
        "message": {
          "type": "string"
        },
        "state": {
          "type": "string"
        },
        "required": [
          "message"
        ]
      }
    },
    "ErrorResponse": {
      "properties": {
        "status_code": {
          "type": "integer"
        },
        "error": {
          "type": "string"
        },
        "required": [
          "code",
          "message"
        ]
      }
    }
  }
}
